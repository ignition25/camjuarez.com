<% content_for :title do %>
    <%= @post.title %> | Cam's Blog
<% end %>

<% content_for :head do %>
    <meta property="og:image" content="<%= "#{root_url}avi.jpg" %>"/>
    <meta property="og:title" content="<%= @post.title %>" />
    <meta property="og:site_name" content="Cam Juarez's Blog" />
    <meta property="og:url" content="<%= post_url @post %>" />
    <meta property="og:description" content="<%= @post.entry.truncate 140, :omission => "..." %>" />
<% end %>

<div class="post">

    <h2><%= @post.title %></h2>
     <div class="date-time"><%= @post.category %> &middot; <%= @post.created_at.to_date.to_formatted_s(:long) %></div>
    <p>
      <%= raw (coderay(RedCloth.new(@post.entry).to_html)) %>
    </p>

    <div class="discussion">
    	<h3>Discussion and Sharing</h3>
        <div class="post-footer">
            Thanks for reading, I'm Cam Juarez a Computer Science, Math double-major and tech enthusiast from the University of Oregon. If you enjoyed this article and/or found it useful, share it with your friends. Feel free to leave comments below about any questions/concerns/suggestions, or if you'd just like to get updates, <a href="https://twitter.com/CamJuarez">follow me on twitter</a>.
        <!-- Begin Share Container -->
                <ul class="sharing">
                    <li id="fb-button"><div class="fb-like share_icon" data-href="<%= post_url(@post) %>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false" data-action="like"></div></li>
                    <li id="reddit-button"><a href="http://www.reddit.com/submit?url=<%= post_url(@post) %>"><img class="share_icon" src="http://www.reddit.com/static/spreddit7.gif" alt="submit to reddit" border="0" /></a></li>
                    <li id="h-news"><a id="share_icon" href="http://news.ycombinator.com/submit" class="hn-share-button">Vote on HN</a></li>
                    <li id="tweet-button"><a id="share_icon" href="http://twitter.com/share" data-url="<%= post_url(@post) %>" data-via="CamJuarez" 
                     class="twitter-share-button" data-hashtags="<%= @post.category.gsub(/\s+/, "") %>" data-lang="en">Tweet</a></li>
                </ul>
        <!-- End Share Container -->
        </div>
    	
        <div id="disqus_thread"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'camjuar'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
        
    </div>

    <% if user_signed_in? %>
    	<%= link_to 'Edit', edit_post_path(@post) %> |
    	<%= link_to 'Back', posts_path %>
    <% end %>

</div>

<% if prev_post = pprev(@current_index) %>
    <%= link_to prev_post.title, prev_post, :class => :prev_post, :title => "Previous Post: #{prev_post.title}" %>
<% end %>
<% if next_post = pnext(@current_index) %>
    <%= link_to next_post.title, next_post, :class => :next_post, :title => "Next Post: #{next_post.title}" %>
<% end %>
